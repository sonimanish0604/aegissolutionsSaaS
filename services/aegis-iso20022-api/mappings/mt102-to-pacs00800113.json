{
  "meta": {
    "template_version": "1.0.0",
    "use_case": "MT102_TO_PACS008",
    "source": { "standard": "SWIFT_MT", "message_type": "MT102", "variant": "FIN" },
    "target": { "standard": "ISO20022", "message": "pacs.008", "schema_id": "pacs.008.001.13" },
    "mx_root": "FIToFICstmrCdtTrf",
    "created_by": "aegis",
    "created_at": "2025-10-22T00:00:00Z"
  },
  "namespaces": {
    "mx": "urn:iso:std:iso:20022:tech:xsd:pacs.008.001.13"
  },

  "defaults": {
    "GrpHdr/MsgId": { "value": "$context.request_id" },
    "GrpHdr/CreDtTm": { "value": "$now" },
    "GrpHdr/NbOfTxs": { "value": "1" },
    "GrpHdr/SttlmInf/SttlmMtd": { "value": "CLRG" }
  },

  "blocks": [
    {
      "id": "grp_hdr",
      "mappings": [
        {
          "target": "GrpHdr/InstgAgt/FinInstnId/Othr/Id",
          "value": "NOTPROVIDED"
        }
      ]
    },
    {
      "id": "credit_tx",
      "target_root": "CdtTrfTxInf",
      "mappings": [
        { "source": "21R", "target": "PmtId/InstrId" },
        { "source": "21R", "target": "PmtId/EndToEndId" },
        { "source": "20", "target": "PmtId/TxId" },

        {
          "source": "32A",
          "target": "IntrBkSttlmAmt",
          "transform": [
            { "fn": "regex_extract", "args": { "pattern": "^(\\d{6})([A-Z]{3})(.+)$", "group": 3 } },
            "to_decimal"
          ]
        },
        {
          "source": "32A",
          "target": "IntrBkSttlmAmt/@Ccy",
          "transform": { "fn": "regex_extract", "args": { "pattern": "^(\\d{6})([A-Z]{3})(.+)$", "group": 2 } }
        },
        {
          "source": "32A",
          "target": "IntrBkSttlmDt",
          "transform": [
            { "fn": "regex_extract", "args": { "pattern": "^(\\d{6})([A-Z]{3})(.+)$", "group": 1 } },
            { "fn": "date_parse", "args": { "format": "%y%m%d" } }
          ]
        },

        {
          "source": "71A",
          "target": "ChrgBr",
          "transform": "charge_code"
        },

        {
          "source": "50K",
          "target": "Dbtr/Nm",
          "transform": { "fn": "regex_extract", "args": { "pattern": "^(?:/.*\\n)?([^\\n]+)", "group": 1 } }
        },
        {
          "source": "50K",
          "target": "Dbtr/PstlAdr/AdrLine",
          "transform": [
            { "fn": "regex_extract", "args": { "pattern": "^(?:/.*\\n)?[^\\n]+\\n([\\s\\S]+)$", "group": 1 } },
            "lines"
          ]
        },
        {
          "source": "50K",
          "target": "DbtrAcct/Id/IBAN",
          "transform": [
            { "fn": "regex_extract", "args": { "pattern": "^/([^\\n]+)", "group": 1 } }
          ],
          "on_fail": "DbtrAcct/Id/Othr/Id"
        },
        {
          "target": "DbtrAgt/FinInstnId/Othr/Id",
          "value": "NOTPROVIDED"
        },

        {
          "target": "CdtrAgt/FinInstnId/Othr/Id",
          "value": "NOTPROVIDED"
        },
        {
          "source": "59",
          "target": "Cdtr/Nm",
          "transform": { "fn": "regex_extract", "args": { "pattern": "^(?:/.*\\n)?([^\\n]+)", "group": 1 } }
        },
        {
          "source": "59",
          "target": "Cdtr/PstlAdr/AdrLine",
          "transform": [
            { "fn": "regex_extract", "args": { "pattern": "^(?:/.*\\n)?[^\\n]+\\n([\\s\\S]+)$", "group": 1 } },
            "lines"
          ]
        },
        {
          "source": "59",
          "target": "CdtrAcct/Id/Othr/Id",
          "transform": { "fn": "regex_extract", "args": { "pattern": "^/([^\\n]+)", "group": 1 } }
        }
      ]
    }
  ],

  "validations": [
    { "path": "GrpHdr/MsgId", "required": true },
    { "path": "GrpHdr/CreDtTm", "required": true },
    { "path": "GrpHdr/NbOfTxs", "required": true },
    { "path": "CdtTrfTxInf/PmtId/InstrId", "required": true },
    { "path": "CdtTrfTxInf/IntrBkSttlmAmt", "required": true },
    { "path": "CdtTrfTxInf/IntrBkSttlmAmt/@Ccy", "required": true },
    { "path": "CdtTrfTxInf/IntrBkSttlmDt", "required": true },
    { "path": "CdtTrfTxInf/Dbtr/Nm", "required": true },
    { "path": "CdtTrfTxInf/DbtrAcct/Id/IBAN", "required": true },
    { "path": "CdtTrfTxInf/Cdtr/Nm", "required": true },
    { "path": "CdtTrfTxInf/CdtrAcct/Id/Othr/Id", "required": true }
  ],

  "transforms_catalog": [
    "regex_extract(pattern,group)",
    "to_decimal",
    "date_parse(format)",
    "lines",
    "charge_code"
  ],

  "error_policies": {
    "on_missing_required": "fail",
    "on_transform_error": "warn_and_copy_raw",
    "on_unknown_tag": "ignore"
  }
}
