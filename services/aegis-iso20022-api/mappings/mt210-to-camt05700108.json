{
  "meta": {
    "template_version": "1.0.0",
    "use_case": "MT210_TO_CAMT057",
    "source": { "standard": "SWIFT_MT", "message_type": "MT210", "variant": "FIN" },
    "target": { "standard": "ISO20022", "message": "camt.057", "schema_id": "camt.057.001.08" },
    "mx_root": "NtfctnToRcv",
    "created_by": "aegis",
    "created_at": "2025-10-22T00:00:00Z"
  },
  "namespaces": {
    "mx": "urn:iso:std:iso:20022:tech:xsd:camt.057.001.08"
  },

  "defaults": {
    "GrpHdr/MsgId": { "value": "$context.request_id" },
    "GrpHdr/CreDtTm": { "value": "$now" }
  },

  "blocks": [
    {
      "id": "notification",
      "target_root": "Ntfctn",
      "mappings": [
        { "source": "20", "target": "Id" },

        { "source": "25", "target": "Acct/Id/Othr/Id" },

        {
          "source": "32B",
          "target": "TtlAmt",
          "transform": [
            { "fn": "regex_extract", "args": { "pattern": "^([A-Z]{3})(.+)$", "group": 2 } },
            { "fn": "to_decimal" }
          ]
        },
        {
          "source": "32B",
          "target": "TtlAmt/@Ccy",
          "transform": { "fn": "regex_extract", "args": { "pattern": "^([A-Z]{3})(.+)$", "group": 1 } }
        },

        {
          "source": "30",
          "target": "XpctdValDt",
          "transform": [
            { "fn": "date_parse", "args": { "format": "%y%m%d" } }
          ]
        },

        {
          "source": "50",
          "target": "Dbtr/Pty/Nm",
          "transform": { "fn": "regex_extract", "args": { "pattern": "^(?:/.*\\n)?\\s*([^\\n]+)", "group": 1 } }
        },
        {
          "source": "50",
          "target": "Dbtr/Pty/PstlAdr/AdrLine",
          "transform": [
            { "fn": "regex_extract", "args": { "pattern": "^(?:/.*\\n)?[^\\n]+\\n([\\s\\S]+)$", "group": 1 } },
            { "fn": "lines" }
          ]
        },

        {
          "source": "56A",
          "target": "IntrmyAgt/FinInstnId/BICFI",
          "transform": { "fn": "regex_extract", "args": { "pattern": "^/?([A-Za-z0-9]{8,11})", "group": 1 } }
        }
      ]
    },
    {
      "id": "notification_item",
      "target_root": "Ntfctn/Itm",
      "mappings": [
        {
          "switch": [
            {
              "if": { "exists": "21" },
              "mappings": [
                { "source": "21", "target": "Id" }
              ]
            }
          ],
          "default": [
            { "source": "20", "target": "Id" }
          ]
        },

        {
          "source": "32B",
          "target": "Amt",
          "transform": [
            { "fn": "regex_extract", "args": { "pattern": "^([A-Z]{3})(.+)$", "group": 2 } },
            { "fn": "to_decimal" }
          ]
        },
        {
          "source": "32B",
          "target": "Amt/@Ccy",
          "transform": { "fn": "regex_extract", "args": { "pattern": "^([A-Z]{3})(.+)$", "group": 1 } }
        },

        {
          "source": "30",
          "target": "XpctdValDt",
          "transform": [
            { "fn": "date_parse", "args": { "format": "%y%m%d" } }
          ]
        },

        {
          "source": "50",
          "target": "Dbtr/Pty/Nm",
          "transform": { "fn": "regex_extract", "args": { "pattern": "^(?:/.*\\n)?\\s*([^\\n]+)", "group": 1 } }
        },
        {
          "source": "50",
          "target": "Dbtr/Pty/PstlAdr/AdrLine",
          "transform": [
            { "fn": "regex_extract", "args": { "pattern": "^(?:/.*\\n)?[^\\n]+\\n([\\s\\S]+)$", "group": 1 } },
            { "fn": "lines" }
          ]
        },

        {
          "source": "56A",
          "target": "IntrmyAgt/FinInstnId/BICFI",
          "transform": { "fn": "regex_extract", "args": { "pattern": "^/?([A-Za-z0-9]{8,11})", "group": 1 } }
        }
      ]
    }
  ],

  "validations": [
    { "path": "GrpHdr/MsgId", "required": true },
    { "path": "GrpHdr/CreDtTm", "required": true },
    { "path": "Ntfctn/Id", "required": true },
    { "path": "Ntfctn/TtlAmt", "required": true },
    { "path": "Ntfctn/TtlAmt/@Ccy", "required": true },
    { "path": "Ntfctn/Itm/Id", "required": true },
    { "path": "Ntfctn/Itm/Amt", "required": true },
    { "path": "Ntfctn/Itm/Amt/@Ccy", "required": true }
  ],

  "transforms_catalog": [
    "to_decimal",
    "date_parse(format)",
    "lines",
    "regex_extract(pattern,group)"
  ],

  "error_policies": {
    "on_missing_required": "fail",
    "on_transform_error": "warn_and_copy_raw",
    "on_unknown_tag": "ignore"
  }
}
